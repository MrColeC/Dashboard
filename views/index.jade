extends layout
block content
    .row
      .col-xs-12.main
        <br/>
        h1.page-header Dashboard
        .row.quickstatus
          // Short term
          .col-xs-12.col-sm-4.placeholder
            span.text-muted Short Term Objectives
            .progress
              .progress-bar(role='progressbar' aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;")
                span 20% of Projects
          // Medium term
          .col-xs-12.col-sm-4.placeholder
            span.text-muted Medium Term Objectives
            .progress
              .progress-bar(role='progressbar' aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;")
                span 60% of Projects
          // Long term
          .col-xs-12.col-sm-4.placeholder
            span.text-muted Long Term Objectives
            .progress
              .progress-bar(role='progressbar' aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;")
                span 20% of Projects
        // Main content table
        h2.sub-header Section title
        #mainTable.table-responsive
          table.table.table-striped
            thead
              tr
                th Project #
                th Area
                th Name
                th Leader
                th Members
                th Completion Target
                th Grant Deliverable
                th Software Requirements
                th Effort Requirements
              tbody
              tr
                td 1
                td 2
                td 3
                td 4
                td 5
                td 6
                td 7
                td 8
                td 9
                
block js-includes
  // Javascript to build (populate) the table
  script(src='/js/buildTable.js')
